generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model User {
  // NomeDaColuna TipoDaColuna @modificadores
  id Int @id @default(autoincrement())
  username String
  password String
  profile_picture Bytes?
  gender String
  job_title String
  admin Boolean
  created_at DateTime
  updated_at DateTime
}

model Post {
  id Int @id @default(autoincrement())
  user_id Int
  content String
  update_at DateTime
  created_at DateTime
}

model Comment {
  id Int @id @default(autoincrement())
  post_id Int
  user_id Int
  content String
}

model JobTitle {
  id Int @id @default(autoincrement())
  name String
  team String
  created_at DateTime
}